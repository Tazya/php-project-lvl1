#!/bin/php

<?php

$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';
$autoloadPathGlobal = __DIR__ . '/../../../autoload.php';

if (file_exists($autoloadPathLocal)) {
    require_once $autoloadPathLocal;
} else {
    require_once $autoloadPathGlobal;
}

use function BrainGames\Flow\run;
use function BrainGames\Games\ProgressionGame\getGame;
use function BrainGames\Games\ProgressionGame\getRules;

$game = getGame();
$rules = getRules();
run($game, $rules);